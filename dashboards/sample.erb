<% content_for :title do %>Xero Caffeinated<% end %>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="welcome" 
          data-view="Intro" 
          data-img="xero.png" 
          data-title="Xero. Caffeinated." 
          data-img="xero.png" 
          data-text="" 
          data-moreinfo="Protip: You can drag the widgets around!"></div>
    </li>    


    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="dpc" 
          data-view="Meter" 
          data-title="% Consumed Today" 
          data-min="0" 
          data-max="100"></div>
    </li>


    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="valuation" data-view="Number" data-title="Current Valuation" data-moreinfo="In billions" data-prefix="$"></div>
    </li>
    
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="buzzwords" 
          data-view="List" 
          data-unordered="true" 
          data-title="Cunsumption By Department" 
          data-moreinfo="# of times said around the office"></div>
    </li>
   
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions" 
          data-view="Comments" 
          data-moreinfo="#xero #coffee"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="convergence" data-view="Graph" data-title="Convergence" style="background-color:#585a60"></div>
    </li>


  </ul>

